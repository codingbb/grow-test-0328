{{> layout/compheader}}

<div style="margin-top: 130px; min-height: 600px;" class="mx-auto">
    <div>
        <div class="new-container my-5 py-5 pt-80">

            {{> layout/sidebar}}
            <div id="content" class="my-4 layer2-right-container" style="flex: 0 0 auto; width: calc(100% - 270px);">
                <div class="components">
                    <div class="components-div p-tb-10 d-flex justify-content-between">
                        <div class="font mb-3">이력서 내역</div>
                        <div>
                            <button type="button" class="btn btn-mint offer-table-btn mb-3"><a
                                    href="/jobs/writeJobsForm">이력서 작성</a></button>
                        </div>
                    </div>
                    <div class="components-div">
                        <table class="table table-hover offer-table scroll"
                               style="text-align: center; border-top:2px solid #ddd">
                            <thead>
                            <!--여기 UI부분 눈을 헤쳐서 고쳤어요-->
                            <tr>
                                <th class="center-align col">No</th>
                                <th class="center-align col-2">이름</th>
                                <th class="center-align col">이력서 제목</th>
                                <th class="center-align col-2">경력</th>
                                <th class="center-align col">주요 기술</th>
                                <th class="center-align col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#userResumeSkill}}
                                <tr class="offer-table">
                                    <th scope="row">{{id}}</th>
                                    <td>{{myName}}</td>
                                    <td>{{resumeTitle}}</td>
                                    <td>{{career}}</td>
                                    <td>
                                        <div class="new-skill-box">
                                            {{#skillList}}
                                                <div class="{{color}}">{{name}}</div>
                                            {{/skillList}}
                                        </div>
                                    </td>
                                    <td>
                                        <div class="new-create-button">
                                            <form action="/resume/resume-detail/{{id}}">
                                                <input type="hidden" name="jobsId" value="jobsId">
                                                <button type="submit" class="btn btn-mint offer-table-btn">상세보기</button>
                                            </form>
                                        </div>
                                        <div class="new-create-button">
                                            <form action="/apply/pass/update/{{id}}" method="post">
                                                <input type="hidden" name="jobsId" value="jobsId">
                                                <button type="submit" class="btn btn-mint offer-table-btn">지원내역</button>
                                            </form>
                                        </div>
                                        <!--                                    <div class="new-create-button">-->
                                        <!--                                        <form action="/apply/fail/update/{{id}}" method="post">-->
                                        <!--                                            <input type="hidden" name="jobsId" value="jobsId">-->
                                        <!--                                            <button type="submit" class="btn btn-mint offer-table-btn">불합격</button>-->
                                        <!--                                        </form>-->
                                        <!--                                    </div>-->
                                    </td>
                                </tr>
                            {{/userResumeSkill}}
                        </table>
                    </div>
                </div>

                <div class="components" style="height: 50px;"></div>
                <div class="components">
                    <div class="font mb-3">지원 현황</div>
                    <div>
                        <table class="table table-hover offer-table scroll"
                               style="text-align: center; border-top:2px solid #ddd">
                            <thead>
                            <tr>
                                <th>No</th>
                                <th>기업명</th>
                                <th>공고명</th>
                                <th>경력</th>
                                <th>주요 기술</th>
                                <th>현재 상태</th>
                            </tr>
                            </thead>
                            <tbody>


                            <tr class="offer-table">
                                <td>{{id}}</td>
                                <td>
                                    <div style="text-align: left; font-size: 20px;font-weight: 700;margin-bottom: 5px;">
                                        title
                                    </div>


                                <td>기업명</td>
                                <!--타이틀, 보유스킬-->
                                <td class="col-3" style="text-align: center">
                                    <div style="text-align: start"> </div>
                                    <div class="new-skill-box">

                                        <div class="color">name</div>

                                    </div>
                                </td>
                                <td>task</td>
                                <td>career</td>

                                <!--공고 관련 버튼-->
                                <!--여기 UI부분 눈을 헤쳐서 고쳤어요-->
                                <td class="col-3" style="text-align: center">
                                    <div class="">
                                        <div class="new-create-button">
                                            <a href="/comp/{{user.id}}/comphome?jobsId=id">
                                                <button type="button" class="btn btn-mint offer-table-btn">상세보기
                                                </button>
                                            </a>
                                        </div>
                                        <div class="new-create-button">
                                            <a href="/jobs/{{id}}/updateJobsForm">
                                                <button type="button" class="btn btn-mint offer-table-btn">지원취소
                                                </button>
                                            </a>
                                        </div>
                                        <!--                                        <div class="new-create-button">-->
                                        <!--                                            <form action="/jobs/{{id}}/delete" method="post">-->
                                        <!--                                                <button class="btn btn-mint offer-table-btn">공고 삭제</button>-->
                                        <!--                                            </form>-->
                                        <!--                                        </div>-->
                                    </div>

                                </td>
                            </tr>

                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{> layout/footer}}