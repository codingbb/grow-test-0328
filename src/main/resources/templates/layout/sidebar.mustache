<script>

    // 페이지가 로드될 때 선택된 메뉴 항목에 활성화 클래스를 추가

    $(document).ready(function () {
        // 현재 페이지의 URL을 가져오는 함수
        function getCurrentPageUrl() {
            return window.location.pathname;
        }

        // 현재 페이지에 대한 메뉴 항목을 활성화하는 함수
        function activateMenu() {
            var currentPageUrl = getCurrentPageUrl();
            $('aside .sub-menu').each(function () {
                if ($(this).attr('href') === currentPageUrl) {
                    $(this).addClass('btn-mint');
                    $(this).css('color', 'white'); // 글자 색상을 흰색으로 설정

                }
            });
        }

        // 페이지가 로드될 때 메뉴 항목 활성화 실행
        activateMenu();
    });

</script>